{
  "name": "le7el-dapp",
  "version": "1.0.0",
  "description": "Frontend for LE7EL.com dapp",
  "private": true,
  "scripts": {
    "start": "npm install && npm run build:dev && npm run dev",
    "test": "elm-test",
    "test:watch": "elm-test --watch",
    "deploy": "ipfs-deploy public/",
    "deploy:all": "ipfs-deploy -p pinata -p infura public/",
    "deploy:pinata": "ipfs-deploy -p pinata public/",
    "build": "run-s build:elm-spa build:elm build:webpack:prod",
    "build:dev": "run-s build:elm-spa build:dev:elm",
    "dev": "run-p dev:elm-spa dev:elm",
    "build:elm": "elm make src/Main.elm --optimize --output=js/elm.compiled.js",
    "build:dev:elm": "elm make src/Main.elm --debug --output=public/dist/js/elm.compiled.js || true",
    "build:elm-spa": "elm-spa build .",
    "dev:elm": "elm-live src/Main.elm -u -d public -- --debug --output=public/dist/js/elm.compiled.js",
    "dev:elm:network": "elm-live --host 192.168.0.102 src/Main.elm -u -d public -- --debug --output=public/dist/js/elm.compiled.js",
    "dev:elm-spa": "chokidar src/Pages -c \"elm-spa build .\"",
    "build:webpack": "webpack --mode=development",
    "build:webpack:prod": "webpack --mode=production",
    "dev:webpack": "webpack-dev-server"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "babel-loader": "^8.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "chokidar-cli": "2.1.0",
    "closure-webpack-plugin": "^2.3.0",
    "copy-webpack-plugin": "^6.1.1",
    "css-loader": "^4.3.0",
    "elm": "0.19.1-3",
    "elm-live": "4.0.2",
    "elm-spa": "5.0.3",
    "elm-test": "0.19.1-revision2",
    "elm-webpack-loader": "^7.0.1",
    "google-closure-compiler": "^20200920.0.0",
    "less": "^3.12.2",
    "less-loader": "^7.0.1",
    "mini-css-extract-plugin": "^0.11.2",
    "minify-bundled-webpack-plugin": "0.0.3",
    "npm-run-all": "4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "terser-webpack-plugin": "^4.2.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.1.4",
    "webpack-merge-and-include-globally": "^2.1.25"
  },
  "dependencies": {
    "bnc-onboard": "^1.13.1",
    "dexie": "^3.0.2",
    "ethers": "^5.0.14"
  }
}
